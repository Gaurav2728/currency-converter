<p class="text-info text-center">List All Users</p>
<div class="col-lg-12">
  <table class="table table-hover table-bordered">
    <tbody class="thead-dark">
      <tr>
        <th>Avatar</th>
        <th>Full Name</th>
        <th>Email</th>
      </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag(user.avatar, size: '50') %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
