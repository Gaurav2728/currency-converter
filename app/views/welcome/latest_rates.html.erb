<p class="text-info text-center">Latest Currency Exchange Rates</p>
<div class="col-lg-12">
  <% if @data["success"].eql?(true) %>
    <table class="table table-hover table-bordered">
      <tbody class="thead-dark">
        <tr>
          <th>Currency</th>
          <th>Amount</th>
        </tr>
      <% @data["rates"].each do |k,v| %>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <table class="table table-hover table-responsive ">
      <tbody>
        <tr>
          <th>Message</th>
        </tr>
        <tr>
          <%= @data["error"]["type"] %>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
